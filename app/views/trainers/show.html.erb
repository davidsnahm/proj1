<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>



<% if current_trainer.id == @trainer.id %>
	<hr>
	<%= button_to "New Pokemon!", pokemons_new_path, :class => "button medium", :method => :get %> 
	<hr>
<% end %>

<ul style="list-style-type:none">
	<% @trainer.pokemon.each do |p| %>
		<li> Name: <%= p.name %> 
			<ul style="list-style-type:none">
				<li>Level: <%= p.level %> </li>
				<li>Health: <%= p.health %> </li>
				<%= button_to "Damage!", damage_path(id: p.id), :class => "button medium", :method => :patch %> 
			</ul>
		</li>
	<% end %>
</ul>
